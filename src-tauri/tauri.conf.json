{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "tauri-nextjs-template",
  "version": "0.1.0",
  "identifier": "listenBli",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:3100",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },

  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
